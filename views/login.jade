doctype html
html
  header
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js')
    
    // 합쳐지고 최소화된 최신 CSS
    link(rel='stylesheet', href='bootstrap/css/bootstrap.min.css')
    // 부가적인 테마
    link(rel='stylesheet', href='bootstrap/css/bootstrap-theme.min.css')
    // 합쳐지고 최소화된 최신 자바스크립트
    script(src='bootstrap/js/bootstrap.min.js')
    //제이쿼리
    script(src='js/jquery-3.1.0.min.js')
    
    link(rel='stylesheet', href='stylesheets/login.css')
    
  body
    .container
      .row
        .col-sm-6.col-md-4.col-md-offset-4
          h1.text-center.login-title 이승준의 채팅 세상
          |       
          .account-wall
            img.profile-img(src='imgs/loginImg.JPG', alt='')
            |         
            form.form-signin(action='login' method = 'post')
              input#id.form-control(type='text', placeholder='ID', required='', autofocus='', name='id')
              |         
              input#password.form-control(type='password', placeholder='Password', required='', name='password')
              |         
              button.btn.btn-lg.btn-primary.btn-block(type='submit')
                | Sign in
              |         
              label.checkbox.pull-left
                input(type='checkbox', value='remember-me')
                |           Remember me
              |         
              a.pull-right.need-help(href='#') Need help? 
              span.clearfix
          |       
          a.text-center.new-account(href='registerMember') Create an account
          p#result(style='display:none;')= result
    script.
      var result = $('#result').text();
      if(result=='success') alert('작업을 성공적으로 수행하였습니다');
      else if(result=='no member') alert('존재하지 않는 회원입니다');
      else if(result=='wrong password') alert('비밀번호가 일치하지 않습니다');